<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xinan.mapper.UserMapper">

    <update id="update">
        update XinAn.user
        <set>
            <if test="username!=null and username!=''">
                username = #{username},
            </if>
            <if test="phone!=null and phone!=''">
                phone = #{phone},
            </if>
            <if test="gender!=null">
                gender = #{gender},
            </if>
            <if test="birthday!=null">
                birthday = #{birthday},
            </if>
            <if test="avatar!=null and avatar!=''">
                avatar = #{avatar},
            </if>
            <if test="signature!=null and signature!=''">
                signature = #{signature},
            </if>
            <if test="backgroundImage!=null and backgroundImage!=''">
                background_image = #{backgroundImage},
            </if>
        </set>
        where id = #{id};
    </update>
    <select id="getRequest" resultType="com.xinan.vo.FriendRequestVO">
        select id as userId,username,avatar,phone from user where user.id in
                         <foreach collection="ids" item="id" open="(" separator="," close=")">
                             #{id}
                         </foreach>
        ;
    </select>
</mapper>
